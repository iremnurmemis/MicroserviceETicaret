@model UpdateSpecialOfferDto

@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="SpecialOfferId" />
                        <label asp-for="Title" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />

                        <label asp-for="SubTitle" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />

                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />

                        <button class="btn btn-success">Özel Teklifi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>